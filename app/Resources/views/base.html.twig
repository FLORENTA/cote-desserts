<!DOCTYPE html>
<html lang="{{ app.request.locale|split('_')[0] }}">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0">
        <meta name="description" content="{{ 'html.head.description' | trans }}"/>
        <meta name="keywords" content="{{ 'html.head.keywords' | trans }}"/>
        <title>{% block title %}{{ 'html.head.title' | trans }}{% endblock %}</title>
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
        <link rel="stylesheet" href="{{ asset('build/js/app.css') }}"/>
        <link rel="stylesheet" href="{{ asset('build/css/app.css') }}"/>
        <link rel="stylesheet" href="{{ asset('css/font-awesome/font-awesome.css') }}"/>
        {# https://github.com/willdurand/BazingaJsTranslationBundle/blob/master/Resources/doc/index.md #}
        <script src="{{ asset('bundles/bazingajstranslation/js/translator.min.js') }}"></script>
        <script src="{{ url('bazinga_jstranslation_js') }}"></script>
        <script type="text/javascript" src="{{ asset('build/js/app.js') }}"></script>
    </head>
    <body>
        <div id="app">
            {% block body %}{% endblock %}
        </div>
    </body>
</html>
